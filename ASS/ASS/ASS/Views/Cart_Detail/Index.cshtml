                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr data-item-id="@item.Id" data-total-price="@item.Total">
                                <td>
                                    <div class="item-center pdl10">
                                        <input type="checkbox" class="checkboxStyle">
                                    </div>
                                </td>
                                <td>
                                    <div class="product-title item-center">
                                        <img src="~/lib/images/@item.Product.Image" alt="Product Image" class="img-thumbnail" style="max-width: 100px;">
                                        <div>
                                            <p>@Html.DisplayFor(modelItem => item.Product.Ten)</p>
                                            <p>Màu sắc: @item.Product.Ten</p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="item-center">@Html.DisplayFor(modelItem => item.Price)</div>
                                </td>
                                <td>
                                    <div class="item-center">
                                        <div class="quantity">
                                            <input class="btn-quantity decrease-quantity" type="button" value="-">
                                            <input type="number" max="@item.Product.SoLuong" min="1" value="@item.Quantity" class="quantity-input">
                                            <input class="btn-quantity increase-quantity" type="button" value="+">
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="item-center text-red">
                                        <span class="total-price">@item.Total</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="item-center pinside10">
                                        <button type="button" class="btn btn-sm btn-primary btn-update">Sửa</button>
                                        <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Product.Id" class="btn btn-sm btn-info">Chi tiết</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Xóa</a>
                                    </div>
                                </td>
                            </tr>
                        }
                        <tr>
                            <td colspan="4" class="text-right font-weight-bold">Tổng giá:</td>
                            <td>
                                <span id="totalPrice" class="text-red">
                                    @Model.Sum(item => item.Total).ToString("C")
                                </span>
                            </td>
                            <td>
                                <button asp-controller="Orders" asp-action="Create" class="btn-default">Mua Ngay</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <input type="hidden" name="id" id="hidden-id" />
        <input type="hidden" name="quantity" id="hidden-quantity" />
        <input type="hidden" name="totalPrice" id="hidden-totalPrice" />
