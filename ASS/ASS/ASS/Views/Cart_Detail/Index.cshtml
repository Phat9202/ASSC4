                        const input = this.parentElement.querySelector('input.quantity-input');
                        let quantity = parseInt(input.value, 10);
                        const maxQuantity = parseInt(input.getAttribute('max'), 10);

                        if (this.classList.contains('increase-quantity')) {
                            if (quantity < maxQuantity) {
                                quantity++;
                            }
                        } else if (this.classList.contains('decrease-quantity')) {
                            if (quantity > 1) {
                                quantity--;
                            }
                        }

                        input.value = quantity;
                        // Cập nhật thành tiền và các hành động khác nếu cần
                    });
                });

