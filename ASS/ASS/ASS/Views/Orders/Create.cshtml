    <div class="container">
        <div class="box checkout-form">
            <!-- checkout - form -->
            <div class="box-head">
                <h2 class="head-title">Thông tin đơn hàng</h2>
            </div>
            <div class="box-body">
                <div class="row">
                    <form method="post" action="@Url.Action("CreateOrder", "Order")">
                        @Html.AntiForgeryToken()
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                                <label for="AccountId">Tài khoản</label>
                                <input id="AccountId" name="AccountId" type="text" class="form-control"
                                       value="@Model.AccountId" placeholder="Tài khoản" required>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                                <label for="TotalAmount">Tổng số tiền</label>
                                <input id="TotalAmount" name="TotalAmount" type="number" step="0.01" class="form-control"
                                       value="@Model.TotalAmount" placeholder="Tổng số tiền" required>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                                <label for="OrderDate">Ngày đặt hàng</label>
                                <input id="OrderDate" name="OrderDate" type="date" class="form-control"
                                       value="@Model.OrderDate.ToString("yyyy-MM-dd")" required>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label for="ShippingAddress">Địa chỉ giao hàng</label>
                                <input id="ShippingAddress" name="ShippingAddress" type="text" class="form-control"
                                       value="@Model.ShippingAddress" placeholder="Địa chỉ giao hàng" required>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label for="Notes">Ghi chú</label>
                                <textarea id="Notes" name="Notes" class="form-control" rows="4"
                                          placeholder="Ghi chú">@Model.Notes</textarea>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <button type="submit" class="btn btn-primary">Xác nhận đơn hàng</button>
                        </div>
                    </form>
                    <!-- /.checkout-form -->
                </div>
            </div>
        </div>
