    <div class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="page-breadcrumb">
                        <ol class="breadcrumb">
                            <li><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                            <li><a asp-controller="Accounts" asp-action="AccountDetail" asp-route-id="@ViewBag.AccountId" class="title hidden-xs">Thông Tin Tài khoản</a></li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- login-form -->

    <div class="content">
        <div class="container">
            <div class="box">
                <div class="row-account">
                    <div class="left-container">
                        <div class="user-infor">
                            <img src="~/lib/images/user-img.png" alt="">
                            <span>@Model.FullName</span>
                        </div>
                        <div class="side-bar-content">
                            <ul>
                                <li><a asp-controller="Accounts" asp-action="AccountDetail" asp-route-id="@ViewBag.AccountId" class="title hidden-xs">Thông Tin Tài khoản</a></li>
                                <a href="profile-receipt.html">
                                <li class="slide-bar"><i class="fas fa-money-check"></i><span>Quản lý đơn hàng</span></li></a>
                                <a asp-controller="Accounts" asp-action="ChangePassword">
                                <li class="slide-bar"><i class="fas fa-lock"></i><span> Đổi mật khẩu</span></li></a>
                            </ul>
                        </div>
                    </div>
                    <div class="right-container">


                        <form asp-action="Logout" method="post" class="mt-3">
                            @Html.AntiForgeryToken()
                            <div class="header-container" style="display: flex; justify-content: space-between; align-items: center;">
                                <h3 class="title-content">Thông tin tài khoản</h3>
                                <button type="submit" class="btn-logout">Đăng Xuất</button>
                            </div>
                        </form>



                        <div class="account-infor">

                            <form asp-action="AccountDetail" method="post">

                                <input type="hidden" asp-for="AccountId" />
                                <span class="text-green">@Model.Role</span>

                                <div class="form-control">

                                    <label for="" class="input-label">Họ & tên</label>

                                    <input asp-for="FullName" type="text" placeholder="Thêm họ tên" class="input-field" />

                                    <span asp-validation-for="FullName" class="text-danger"></span>

                                </div>

                                <div class="form-control">

                                    <label for="" class="input-label">Email</label>

                                    <input asp-for="Email" type="email" placeholder="Thêm email" class="input-field" />

                                    <span asp-validation-for="Email" class="text-danger"></span>

                                </div>

                                <div class="form-control">

                                    <label for="" class="input-label">Số điện thoại</label>

                                    <input asp-for="PhoneNumber" type="tel" placeholder="Thêm số điện thoại" class="input-field" />

                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                                </div>

                                <div class="form-control">

                                    <label for="" class="input-label">Địa chỉ giao hàng</label>

                                    <input asp-for="Adress" type="text" placeholder="Địa chỉ" class="input-field" />

                                    <span asp-validation-for="Adress" class="text-danger"></span>

                                </div>

                                <div class="form-control">

                                    <label for="" class="input-label">Ngày sinh</label>

                                    <input asp-for="DateOfBirth" type="date" placeholder="Thêm ngày sinh" class="input-field" />

                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>

                                </div>

                                <div class="form-control">

                                    <label for="" class="input-label">Giới tính</label>

                                    <input asp-for="Gender" type="radio" name="gender" value="Nam" class="input-radio" checked /> Nam

                                    <input asp-for="Gender" type="radio" name="gender" value="Nữ" class="input-radio" /> Nữ

                                    <input asp-for="Gender" type="radio" name="gender" value="Khác" class="input-radio" /> Khác

                                </div>

                                <button type="submit" class="btn-update">Cập nhật</button>

                            </form>

                            <!-- Logout form -->


                        </div>

                    </div>
                    <!-- /.features -->
                </div>
            </div>
        </div>
    </div>
