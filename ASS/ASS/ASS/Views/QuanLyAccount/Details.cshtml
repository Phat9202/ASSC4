                            </div>

                            <div class="account-infor">

                                <form asp-action="Edit" method="post">

                                    <input type="hidden" asp-for="AccountId" />


                                    <div class="form-group">

                                        <label asp-for="FullName">Họ & tên</label>

                                        <input asp-for="FullName" type="text" class="form-control" readonly />

                                        <span asp-validation-for="FullName" class="text-danger"></span>

                                    </div>

                                    <div class="form-group">

                                        <label asp-for="UserName">Tên đăng nhập</label>

                                        <input asp-for="UserName" type="text" class="form-control" placeholder="Thêm tên đăng nhập" readonly />

                                        <span asp-validation-for="UserName" class="text-danger"></span>

                                    </div>

                                    <div class="form-group">

                                        <label asp-for="PassWord">Mật khẩu</label>

                                        <input asp-for="PassWord" type="text" class="form-control" readonly />

                                        <span asp-validation-for="PassWord" class="text-danger"></span>

                                    </div>

                                    <div class="form-group">

                                        <label asp-for="Email">Email</label>

                                        <input asp-for="Email" type="email" class="form-control" readonly />

                                        <span asp-validation-for="Email" class="text-danger"></span>

                                    </div>

                                    <div class="form-group">

                                        <label asp-for="PhoneNumber">Số điện thoại</label>

                                        <input asp-for="PhoneNumber" type="tel" class="form-control" readonly />

                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                                    </div>

                                    <div class="form-group">

                                        <label asp-for="Adress">Địa chỉ giao hàng</label>

                                        <input asp-for="Adress" type="text" class="form-control" readonly />

                                        <span asp-validation-for="Adress" class="text-danger"></span>

                                    </div>

                                    <div class="form-group">

                                        <label asp-for="DateOfBirth">Ngày sinh</label>

                                        <input asp-for="DateOfBirth" type="date" class="form-control" readonly />

                                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>

                                    </div>

                                    <div class="form-group">

                                        <label asp-for="Role">Vai trò</label>

                                        <select asp-for="Role" class="form-control" readonly>

                                            <option value="User" readonly>User</option>

                                            <option value="Admin" readonly>Admin</option>

                                        </select>

                                    </div>

                                    <div class="form-group">

                                        <label asp-for="Gender">Giới tính</label>

                                        <div>

                                            <label class="mr-4"><input asp-for="Gender" type="radio" value="Nam" readonly /> Nam</label>

                                            <label class="mr-4"><input asp-for="Gender" type="radio" value="Nữ" readonly /> Nữ</label>

                                            <label class="mr-4"><input asp-for="Gender" type="radio" value="Khác" readonly /> Khác</label>

                                        </div>

                                    </div>



                                    <a asp-action="Edit" asp-route-id="@Model.AccountId" class="btn btn-primary btn-update">Chỉnh sửa</a>

                                </form>

                            </div>

